@{
    ViewData["Title"] = "Gráfico";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.1.0/chart.min.js"></script>

<h2>Total de Vendas por Produto</h2>
<hr />

<canvas id="myChart" width="400" height="400"></canvas>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');

    var colors = [
        'rgba(255, 99, 132, 0.7)',
        'rgba(54, 162, 235, 0.7)',
        'rgba(132, 222, 312, 0.7)'
    ];

    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: [@Html.Raw(@ViewBag.Labels)],
            datasets: [{
                data: [@Html.Raw(@ViewBag.Valores)],
                backgroundColor: [@Html.Raw(@ViewBag.Cores)],
                borderColor: [@Html.Raw(@ViewBag.Cores)],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>